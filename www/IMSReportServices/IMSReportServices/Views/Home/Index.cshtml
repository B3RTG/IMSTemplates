<div class="row">
    <div class="col-md-12">
        <!--<h2>Job List</h2>-->
        <p>List of jobs avaliable to launch</p>
    </div>
    <div class="col-md-6">
        <table id="tblJobList" class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Job ID</th>
                    <th>Job Code</th>
                    <th>Tittle</th>
                    
                </tr>
            </thead>
        </table>

    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default" id="task_form" style="display:none">
                    <div class="panel-heading">
                        <label>Create Task for job</label>
                        <input type="text" disabled id="JobCODE" value="" />
                    </div>
                    <div class="panel-body">
                        <form role=" form" action="UploaderManager.aspx" method="post" enctype="multipart/form-data" id="FileForm">
                            <div class="col-md-12 form-group">
                                <input type="hidden" id="JobID" value="" />
                            </div>
                            <div class="col-md-12 form-group files">
                                <label>Ficheros necesarios</label>
                                <input type="hidden" name="MAX_FILE_SIZE" value="3000000000" />

                            </div>
                            <button type="submit" class="btn btn-default" id="Submit">Submit</button>
                            <button type="button" class="btn btn-default" id="bCancel">Cancel</button>
                            <span id="loading" style="display:none;"><img alt="loading" src="./images/ajax_loading.gif" /> Loading</span>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-12 alert alert-success alert-dismissible" role="alert" id="TaskMessage" style="display:none">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <p></p>
            </div>
        </div>
    </div>
    
</div>
